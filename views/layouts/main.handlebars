<body>


  <nav class="navbar navbar-inverse menu">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Mongo Scrapper</a>
      </div>
      <ul class="nav navbar-nav">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/saved">Saved Articles<span class="badge badge-pill badge-light numberofsaved"></span></a>
        </li>
      </ul>
      <button class="btn btn-danger navbar-btn"  onclick="showModal()" value="Open Model">
        <a style="color:white" href="/scrape">Scrape New Articles!</a>
      </button>
       <button class="btn btn-danger navbar-btn clearData">
        <a style="color:white" >Clear</a>
      </button>

      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="exampleModalLabel">\</h4>
            </div>
            <div class="modal-body">
              <h3 style="color:gray">Scrape complete!!!</h3>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" ><a href="/">Close</a></button>
            </div>
          </div>
        </div>
      </div>
    </div>
